

<%= render @department %>

<h3>List of Students:</h3>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Program</th>
      <th>Year Level</th>
    </tr>
  </thead>
  <tbody>
    <% @department.students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.program %></td>
        <td><%= student.year_level %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3> Number of Students: <%= @department.student_count %></h3>

<h3>List of Teachers:</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Specialization</th>
      <th>Monthly Salary</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @department.teachers.each do |teachers| %>
      <tr>
        <td><%= teachers.name %></td>
        <td><%= teachers.email %></td>
        <td><%= teachers.specialization %></td>
        <td><%= teachers.monthly_salary %></td>
        <td><%= teachers.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>List of Staff:</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Monthly Salary</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @department.staffs.each do |staff| %>
      <tr>
        <td><%= staff.name %></td>
        <td><%= staff.email %></td>
        <td><%= staff.monthly_salary %></td>
        <td><%= staff.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3> Number of Employee <%= @department.employee_count %></h3>

<div>
  <%= link_to "Edit this department", edit_department_path(@department) %> |
  <%= link_to "Back to departments", departments_path %>

  <%= button_to "Destroy this department", @department, method: :delete %>
</div>
