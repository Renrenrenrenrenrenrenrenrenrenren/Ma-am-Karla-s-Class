

<% content_for :title, "Departments" %>

<h1>Departments</h1>

<table>
  <thead>
    <tr>
      <th>Name |</th>
      <th>Location |</th>
      <th>Show Department |</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.location %></td>
        <td>
          <center><%= link_to "Show", department %></center>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New department", new_department_path %>
