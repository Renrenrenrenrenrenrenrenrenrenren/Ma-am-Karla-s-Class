<!DOCTYPE html>
<html>
<head>
  <title>Paaralan ni Jhirick</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>
  <div class="sidebar">
    <div class="logo">
      <%= image_tag("school_logo.png", alt: "Logo") %>
      <span>Paaralan ni Jhirick</span>
    </div>

    <ul>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#studentMenu" aria-expanded="false">
          <i class="bi bi-people"></i><span>Students</span>
        </a>
        <ul class="collapse list-unstyled ps-4" id="studentMenu">
          <li><%= link_to raw('<i class="bi bi-plus-circle"></i><span>Create New Student</span>'), new_student_path %></li>
          <li><%= link_to raw('<i class="bi bi-list"></i><span>All Students</span>'), students_path %></li>
        </ul>
      </li>
      <li><%= link_to raw('<i class="bi bi-person-badge"></i><span>Teachers</span>'), teachers_path %></li>
      <li><%= link_to raw('<i class="bi bi-person-lines-fill"></i><span>Staffs</span>'), staffs_path %></li>
      <li><%= link_to raw('<i class="bi bi-person-hearts"></i><span>Guardians</span>'), guardians_path %></li>
      <li><%= link_to raw('<i class="bi bi-journal-text"></i><span>Class List</span>'), classlists_path %></li>
      <li><%= link_to raw('<i class="bi bi-book"></i><span>Subjects</span>'), subjects_path %></li>
      <li><%= link_to raw('<i class="bi bi-diagram-3"></i><span>Sections</span>'), sections_path %></li>
      <li><%= link_to raw('<i class="bi bi-building"></i><span>Departments</span>'), departments_path %></li>
    </ul>
  </div>

  <div class="main-content">
    <%= yield %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
