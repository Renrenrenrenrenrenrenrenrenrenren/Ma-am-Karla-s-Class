

<% content_for :title, "Sections" %>

<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Name |</th>
      <th>Subject |</th>
      <th>Teacher |</th>
      <th>Room |</th>
      <th>Time Slot |</th>
      <th>Show Section |</th>
    </tr>
  </thead>
  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= section.subject.name %></td>
        <td><%= section.subject.teacher.name %></td>
        <td><%= section.room %></td>
        <td><%= section.time_slot %></td>
        <td>
          <center><%= link_to "Show", section %></center>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New section", new_section_path %>
