

<% content_for :title, "Subjects" %>

<h1>Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name |</th>
      <th>Teacher |</th>
      <th>Show Subject |</th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.teacher.name %></td>
        <td>
          <center><%= link_to "Show", subject %></center>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New subject", new_subject_path %>
