<!-- app/views/students/new.html.erb -->

<!-- Header Section -->
<div style="background-color: #2c3e50; color: white; padding: 15px 25px; border-radius: 8px; border: 2px solid #1a242f; 
            display: flex; align-items: center; margin-bottom: 20px; box-shadow: 0 3px 6px rgba(0,0,0,0.15);">
  <i class="bi bi-person-plus-fill" style="font-size: 1.8rem; margin-right: 10px;"></i>
  <h1 style="margin: 0; font-size: 1.8rem; font-weight: 700;">New Student</h1>
</div>

<!-- Render Form Partial -->
<%= render "form", student: @student %>

<!-- Back Button -->
<div class="mt-3">
  <%= link_to students_path, class: "btn btn-success" do %>
    <i class="bi bi-arrow-left-circle"></i> Back to Students
  <% end %>
</div>
